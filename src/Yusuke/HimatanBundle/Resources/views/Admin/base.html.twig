<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/yusukehimatan/bootstrap/dist/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/yusukehimatan/dist/css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/yusukehimatan/bootstrap/dist/css/bootstrap-responsive.css') }}">
    {% endblock stylesheets %}
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/yusukehimatan/bootstrap/dist/js/bootstrap.min.js') }}"></script>

    <title>{% block title %}{{ block('page_title') }} - ひまたん管理画面 {% endblock title %}</title>
</head>
<body>

<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('admin_home') }}">ひまたん</a>
        </div>
    </div>
</nav>

<div class="container main-container">
    <div class="content">
        {% block header %}
            <div class="page-header">
                <h1>{% block page_title %}{% endblock page_title %}</h1>
            </div>
        {% endblock header %}

        <div class="row">
            <div class="span10">
                {% block content %}{% endblock content %}
            </div>
        </div>
    </div>

    <footer>
        <p class="copyright">&copy; 2014 Yusuke Himatan Project</p>
    </footer>
</div>

{% block javascripts %}{% endblock javascripts %}
</body>
</html>




