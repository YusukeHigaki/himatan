{% extends 'YusukeHimatanBundle:Api:baseApi.json.twig' %}
{% block content %}
    "id": {{ User.id }},
    "name": "{{ User.name }}",
    "sex": "{{ User.sex }}",
    "age": "{{ User.age }}",
    {% if User.pic1 %}
        "pic1": "{{ amazon_s3_base_url }}{{ amazon_s3_dir }}user/{{ User.pic1 }}",
    {% endif %}
    {% if User.pic2 %}
        "pic2": "{{ amazon_s3_base_url }}{{ amazon_s3_dir }}user/{{ User.pic2 }}",
    {% endif %}
    {% if User.pic3 %}
        "pic3": "{{ amazon_s3_base_url }}{{ amazon_s3_dir }}user/{{ User.pic3 }}",
    {% endif %}
    {% if User.pic4 %}
        "pic4": "{{ amazon_s3_base_url }}{{ amazon_s3_dir }}user/{{ User.pic4 }}",
    {% endif %}
    "introduction": "{{ User.introduction }}",
    "cnt_heart": "{{ User.cntHeart }}",
{% endblock %}
