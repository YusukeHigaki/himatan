{% extends 'YusukeHimatanBundle:Api:baseApi.json.twig' %}
{% block content %}
    "Posts": [
    {% for Post in Posts %}
        {
        "id": {{ Post.id }},
        "text": "{{ Post.text }}",
        "updatedAt": {{ Post.updatedAt | date('U') }},

        "area": {
        "area_id1": {{ Post.areaId1 }}
        "area_id2": {{ Post.areaId2 }}
        "area_id3": {{ Post.areaId3 }}
        }

        "user": {
        "icon": {{ amazon_s3_base_url }}{{ amazon_s3_dir }}user/{{ Post.user.pic1 }},
        "id": {{ Post.user.id }},
        "name": "{{ Post.user.name }}"
        }

        }
    {% endfor %}
    ]
{% endblock %}
